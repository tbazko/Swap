{{#section 'scripts'}}
  <script src="/javascripts/lib/require.js" data-main="/javascripts/userProfileEdit" async></script>
{{/section}}
<div class="content-body paperStyle-container userProfile mb30">
  <div class="row">
    <div class="col-xs4 col-sm8">
      <form class="" action="/user/profile/edit" enctype="multipart/form-data" method="post" class="js-editUserForm form js-form" id="editUserProfileForm">
        <h3 class="title--itemOverview">
          <input type="text" class="form-editingInput" name="firstName" value="{{user.firstName}}" placeholder="First name">
          <input type="text" class="form-editingInput" name="lastName" value="{{user.lastName}}" placeholder="Last name">
        </h3>
        <ul class="no-bullet pt15 pb30 pr30">

          <li class="pb15 keyValue-item">
            <h5 class="inline-block key">Email:&nbsp;</h5>
            <p class="inline value"><input type="email" readonly name="email" value="{{user.email}}" placeholder="Email"></p>
          </li>

          <li class="pt15 pb15 keyValue-item">
            <h5 class="inline-block key">Location:&nbsp;</h5>
            <p class="inline value">
              <input id="autocomplete" class="form-editingInput" type="text" name="streetNumber" value="{{#if user.street}}{{user.street}},&nbsp;{{/if}}{{#if user.streetNumber}}{{user.streetNumber}},&nbsp;{{/if}}{{#if user.city}}{{user.city}},&nbsp;{{/if}}{{#if user.postcode}}{{user.postcode}},&nbsp;{{/if}}{{#if user.state}}{{user.state}},&nbsp;{{/if}}{{#if user.country}}{{user.country}}&nbsp;{{/if}}" placeholder="Address">
              <input id="street_number" class="form-editingInput" type="text" name="streetNumber" value="{{user.streetNumber}}" placeholder="Street number">
              <input id="route" class="form-editingInput" type="text" name="street" value="{{user.street}}" placeholder="Street">
              <input id="postal_code" class="form-editingInput" type="text" name="postcode" value="{{user.postcode}}" placeholder="Postal code">
              <input id="locality" class="form-editingInput" type="text" name="city" value="{{user.city}}" placeholder="City">
              <input id="administrative_area_level_1" class="form-editingInput" type="text" name="state" value="{{user.state}}" placeholder="State">
              <input id="country" class="form-editingInput" type="text" name="country" value="{{user.country}}" placeholder="Country">
            </p>
          </li>
          <li class="pt15 pb15 keyValue-item">
            <h5 class="inline-block key">Phone:&nbsp;</h5>
            <p class="inline value">
              <input type="text" class="form-editingInput" name="phone" placeholder="Phone" value="{{user.phone}}">
            </p>
          </li>
        </ul>
        <input type="submit" name="" class="btn btn--fixedWidth" value="Save">
      </form>
    </div>
    <div class="col-xs4 col-sm4  text-right userProfile-picture">
      <img src="https://pixy.org/placeholder/5885cc0e1ca9c.jpg" alt="User's avatar">
      <button class="btn btn--link btn--report pr0 is-hidden">Report {{user.firstName}}</button>
    </div>
  </div>
</div>
