{{#section 'scripts'}}
  <script src="/javascripts/index.js" async></script>
{{/section}}
<div class="content-body">
  <div class="row paperStyle p10">
    <div class="col-xs4">
      {{> search}}
    </div>
  </div>
  <div class="row mt20">
    <div class="col-xs4">
      <h2 class="section-title section-title--okBg mb10 inline-block">Recently added</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-xs4 col-sm12 col-md2">
      <div class="category-navigation paperStyle p10 mr20">
        {{#each categories}}
          {{#if_eq this.id ../categoryId}}
            <a href="/category/{{name}}?cid={{id}}">
              <h4 class="category-navigation-main {{#unless ../subcategoryId}}is-active{{/unless}}"><span>{{this.name}}</span></h4>
            </a>
          {{else if_eq this.parent ../categoryId}}
            {{#if_eq this.id ../subcategoryId}}
              <a href="/category/{{name}}?cid={{id}}" class="category-navigation-sub is-active">
                <span>{{this.name}}</span>
              </a>
            {{else}}
              <a href="/category/{{name}}?cid={{id}}" class="category-navigation-sub">
                <span>{{this.name}}</span>
              </a>
            {{/if_eq}}
          {{/if_eq}}
        {{/each}}

        <div class="pt10">
          {{#each categories}}
            {{#unless this.parent}}
                {{#if_eq this.id ../categoryId}}
                {{else}}
                  <a href="/category/{{name}}?cid={{id}}">
                    <h4 class="category-navigation-main">{{this.name}}</h4>
                  </a>
                {{/if_eq}}
            {{/unless}}
          {{/each}}
        </div>
      </div>
    </div>
    <div class="col-xs4 col-sm12 col-md10">
      <div class="row row-with-blocks-v2 pt0">
        {{> itemList}}
      </div>
    </div>
  </div>
</div>
