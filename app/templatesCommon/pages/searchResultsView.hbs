{{#section 'scripts'}}
  <script src="/javascripts/index.js" async></script>
{{/section}}
<div class="content-body">
  <div class="row paperStyle p10">
    <div class="col-xs4">
      {{> search}}
    </div>
  </div>
  <div class="row mt10">
    <div class="col-xs4">
      {{#unless tag}}
      <!-- <div>
        <h2 class="section-title section-title--okBg mb10 inline-block">Recently added</h2>
      </div> -->
      {{/unless}}
      {{#if tag}}
        <h4 class="pr20 section-subtitle inline is-active">{{tag}}</h4>
      {{else if category}}
        <h4 class="pr20 section-subtitle inline is-active">{{category}}</h4>
      {{else}}
        <h4 class="pr20 section-subtitle inline is-active">All categories</h4>
      {{/if}}
    </div>
  </div>
  <div class="row row-with-blocks-v2 pt20">
    {{> itemList}}
  </div>
</div>
