<div class="content-body">
  <div class="row paperStyle p10">
    <div class="col-xs4">
      {{> search}}
    </div>
  </div>
  {{#unless tag}}
    <div class="row row-with-blocks-v2">
      {{> categories}}
    </div>
  {{/unless}}
  <div class="row mt20">
    <div class="col-xs4">
      {{#unless tag}}<h2 class="section-title pb10">Recently added</h2>{{/unless}}
      {{#if tag}}
        <h4 class="pr20 section-subtitle inline is-active">{{tag}}</h4>
      {{else}}
        <h4 class="pr20 section-subtitle inline is-active">All categories</h4>
      {{/if}}
    </div>
  </div>
  <div class="row row-with-blocks-v2">
    {{> itemList}}
  </div>
</div>
