{{#section 'scripts'}}
  <script src="/javascripts/editItemForm.js" async></script>
{{/section}}
<form action="/item/{{item.id}}/edit" enctype="multipart/form-data" method="post" class="js-editItemForm form" id="editItemForm">
  <input type="hidden" name="newItem" value="{{newItem}}">
  <input type="hidden" name="userId" value="{{userId}}">
  <div class="row row--layoutWidth row--nowrap">
    <div class="content-body paperStyle-container content-body--itemOverview">
      <div class="row itemOverview">
        <div id="dropzone" class="itemOverview-sliderColumn">
          <label for="">Image&#32;</label>
          <input type="file" name="upload" accept="image/*" multiple="multiple">
          <!-- {{> slider}} -->
        </div>
        <div class="itemOverview-detailsColumn">
          <div class="itemOverview-details">
            {{> breadcrumbs}}
            <!-- <h3 class="title--itemOverview">{{item.name}}</h3> -->
            <input type="hidden" name="itemId" value="{{item.id}}">
            <input type="text" name="name" placeholder="Name" value="{{item.name}}">
            <ul class="no-bullet pt15 pb30">
              <!-- <li class="pt15 pb15 keyValue-item">
                <h5 class="inline-block key">Location:&nbsp;</h5>
                <p class="inline value">{{author.city}}, {{author.country}}</p>
              </li> -->
              <li class="pb15 keyValue-item">
                <h5 class="inline-block key">Condition:&nbsp;</h5>
                <p class="inline value condition-stars condition-{{item.condition}}">
                  <input type="radio" name="itemCondition" value="1">
                  &nbsp;1&nbsp;
                  <input type="radio" name="itemCondition" value="2">
                  &nbsp;2&nbsp;
                  <input type="radio" name="itemCondition" value="3">
                  &nbsp;3&nbsp;
                  <input type="radio" name="itemCondition" value="4">
                  &nbsp;4&nbsp;
                  <input type="radio" name="itemCondition" value="5">
                  &nbsp;5&nbsp;
                </p>
              </li>
              <li class="pb15 keyValue-item">
                <h5 class="inline-block key {{item.swapForTags.length}}">Tags:&nbsp;</h5>
                <p class="inline value">
                  <input type="text" name="tags" placeholder="Tags, keywords">
                </p>
              </li>
              <li class="pb15 keyValue-item">
                <h5 class="inline-block key {{item.swapForTags.length}}">Swap for:&nbsp;</h5>
                <p class="inline value">
                  <input type="text" name="swapForTags" placeholder="Swap for? Some tags/keywords here...">
                </p>
              </li>
            </ul>
          </div>
        </div>
        <div class="itemOverview-swapButton clear">
          <input type="submit" value="Save changes" class="btn btn--ok">
        </div>
      </div>

      <div class="row itemOverview pb0">
        <div class="itemOverview-descriptionColumn pb30">
          <h4 class="pb10">Description:</h4>
          <textarea name="description" id="" class="mb20" cols="30" rows="10" placeholder="Description" value="{{item.description}}">
            {{item.description}}
          </textarea>
          <h4 class="pb10">Reason for swap:</h4>
          <textarea name="description" id="" cols="30" rows="10" placeholder="Description" value="{{item.description}}">
            {{item.reasonForSwap}}
          </textarea>
        </div>
        <div class="itemOverview-mapColumn">
          <div class="itemOverview-map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?size=400x400&maptype=roadmap&markers=color:red%7C{{author.city}},{{author.country}}&key=AIzaSyCvLphh5RdATb2mbpFCZ0k02_ZqFQZjukk')">
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
