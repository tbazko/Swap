extends layout

block content
  .main-container
    .row
      .col.col-xs4.col-sm12.col-md8.col--mdPush2.paperStyle-container
        if itemAdded  
          h2.section-title.text-center.mb20 New item added!
        h1.main-title Add new item
        form(action="/upload" enctype="multipart/form-data" method="post").form
          input(type="hidden" name="userId" value="#{userId}")
          input(type="text" name="name" placeholder="Name")
          input(type="text" name="tags" placeholder="Tags, keywords")
          input(type="text" name="swapForTags" placeholder="Swap for? Some tags/keywords here...")
          p.mb20
            label Condition&#32;
            input(type="radio" name="productCondition" value="1")
            |&nbsp;1&nbsp;
            input(type="radio" name="productCondition" value="2")
            |&nbsp;2&nbsp;
            input(type="radio" name="productCondition" value="3")
            |&nbsp;3&nbsp;
            input(type="radio" name="productCondition" value="4")
            |&nbsp;4&nbsp;
            input(type="radio" name="productCondition" value="5")
            |&nbsp;5&nbsp;
          p.mb20
            label Image&#32;
            input(type="file" name="upload" accept="image/*")
          textarea(name="description", cols="30", rows="10" placeholder="Description")
          p.text-center.mt20
            input(type="submit" value="Add item").btn.btn--turqoise
