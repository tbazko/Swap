extends ../layout

block content
  .main-container.paperStyle-container
    h1.main-title Profile
    h2.section-title.mb10 Welcome
    a(href="/account/my-items").btn Check out my items
    p Name: #{user.firstName}
    p Email: #{user.email}
    p City: #{user.city}
    p You have: #{newRequests} new request(s)
    a(href="/account/signout" title="sign out").btn.btn-secondary.mt10 Sign out
